---
import FeatureTab from "@/layouts/function-components/FeatureTab";
import Projects from "@/layouts/function-components/Projects";
import { markdownify } from "@/lib/utils/textConverter";
import FeatureService from "./FeatureService.astro";

const {
  features: {
    project_management: {
      title,
      content,
      management,
      feature_service,
      feature_tab,
    },
  },
} = Astro.props;
---

<section class="section features pb-0 bg-primary text-white" id="featurestab">
  <div class="container" data-fade>
    <div class="row">
      <div class="mx-auto text-center lg:col-7" data-fade>
        <h2 set:html={markdownify(title)} />
        <p class="mt-4" set:html={markdownify(content)} />
      </div>
    </div>
      <div class="row">
        </div>
        <Projects client:load projects={management.projects} />
      </div>
    </div>
    <FeatureService feature_service={feature_service} />
    <FeatureTab client:load feature_tab={feature_tab} />
</section>
