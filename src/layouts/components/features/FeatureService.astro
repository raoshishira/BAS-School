---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { AiFillCheckCircle } from "react-icons/ai";

type Props = {
  feature_service: CollectionEntry<"features">["data"]["project_management"]["feature_service"];
};
const { feature_service } = Astro.props;
---
<div class="container">
  <div class="gx-5 row mt-16 items-center" data-fade>
    <div class="lg:col-6 lg:order-2">
      <div class="relative">
        <Image
          height={354}
          width={476}
          class="w-full object-contain"
          src={feature_service.image}
          alt=""
        />
      </div>
    </div>
   <div class="mt-6 lg:col-6 lg:order-1 lg:mt-0">
     <div>
       <h2 class="lg:text-4xl">{feature_service.title}</h2>
       <p class="mt-4">{feature_service.description}</p>
       <ul class="mt-6 space-y-3">
          {
            feature_service.list?.map((item, index) => (
            <li class="flex items-start text-white" data-fade>
            <AiFillCheckCircle className="mr-3 mt-1 text-white" />
            {item}
            </li>
          ))}
       </ul>

  </div>
     <div class="mt-11 flex flex-wrap">
       {
         feature_service.buttons.map(
           (button) =>
             button.enable && (
                <a
                 class={`btn m-3 ml-0 block sm:inline-block ${
                   button.outline ? "btn-outline-primary" : "btn-white"
                 } `}
                 href={button.link}
               >
                 {button.label}
               </a>
             )
         )
       }
     </div>
   </div>
  </div>
</div>