---
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";

type Props = {
  gallery: CollectionEntry<"about">["data"]["gallery"];
};

const { gallery } = Astro.props;
const { title, images } = gallery;
---

<section class="section" data-fade>
  <div class="container">
    <div class="text-center mb-8">
      <h2 set:html={markdownify(title)} />
    </div>

    <div class="flex flex-col lg:flex-row gap-6">
  <!-- Left side: two horizontal images stacked -->
  <div class="flex flex-col gap-6 flex-1">
    <img
      src={images[0]}
      alt=""
      class="w-full h-48 object-cover rounded-xl transition-transform duration-300 hover:scale-102"
    />
    <img
      src={images[1]}
      alt=""
      class="w-full h-48 object-cover rounded-xl transition-transform duration-300 hover:scale-102"
    />
  </div>

  <!-- Right side: one vertical image -->
  <div class="flex-1">
    <img
      src={images[2]}
      alt=""
      class="w-full h-full max-h-[400px] object-cover rounded-xl transition-transform duration-300 hover:scale-102"
    />
  </div>
</div>
</section>
