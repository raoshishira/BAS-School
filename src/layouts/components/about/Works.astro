---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = {
  features: CollectionEntry<"about">["data"]["features"];
};
const {
  features: { title, button, features_list },
} = Astro.props;
---

<section class="section" id="about1" data-fade>
  <div class="container">
    <div class="row items-center justify-between">
      <div class="md:col-6">
        <h2 class="text-center md:text-left" set:html={title} />
      </div>
      {
        button.enable && (
          <div class="mt-6 text-center md:col-3 md:mt-0 md:text-right">
            <a class="btn btn-white" href={button.link}>
              {button.label}
            </a>
          </div>
        )
      }
    </div>
    <div class="grid mt-14 gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    features_list.map((item, i) => (
      <div class="h-full flex flex-col items-center justify-center text-center rounded-xl bg-white p-6 shadow-lg lg:p-8 transform transition-transform duration-300 hover:scale-[1.03] hover:shadow-xl">
        <div class="gradient-number relative inline-block">
          <span class="bg-gradient absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
            {i > 8 ? i + 1 : `0${i + 1}`}
          </span>
          <Image
            height={90}
            width={90}
            src="/images/gradient-number-bg.png"
            alt=""
          />
        </div>
        <h4 class="my-6 text-primary transition-colors duration-300 group-hover:text-primary">
          {item.title}
        </h4>
        <p class="text-primary transition-colors duration-300 group-hover:text-primary">
          {item.content}
        </p>
      </div>
    ))
  }
</div>

  </div>
</section>
