---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
const { banner } = Astro.props;
const { title, button, image, content } = banner;
---

<section class="section banner relative bg-primary text-white">
  <div class="container">
    <div class="row items-center">
      <div class="lg:col-6 flex flex-col items-center lg:items-start text-center lg:text-left" data-fade>
        <h1 class="banner-title header-dark" set:html={markdownify(title)} />
        <p class="mt-6 text-white" set:html={markdownify(content)} />
        {
          button.enable && (
            <div class="mt-8">
              <a class="btn btn-white text-primary inline-block" href={button.link}>
                {button.label}
              </a>
            </div>
          )
        }
      </div>
      <div class="lg:col-6 mt-10 lg:mt-0" data-fade>
        <Image
          class="w-full object-contain rounded-xl"
          alt="banner"
          src={image}
          width={603}
          height={396}
        />
      </div>
    </div>
  </div>
</section>


